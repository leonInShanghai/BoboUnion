<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/on_sell_cover"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_height="160dp"/>
        
        <TextView
            android:id="@+id/on_sell_content_title"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="测试测试企业的伦理责任：企业符合社会期望的行为活动企业的伦理责任：企业符合社会期望的行为活动"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/on_sell_orgin_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#D0021B"
                tools:text="原价￥58.9"/>

            <TextView
                android:id="@+id/on_sell_off_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D0021B"
                tools:text="券后价格：28.8"
                android:textSize="12sp"/>

        </LinearLayout>
        
    </LinearLayout>


</androidx.cardview.widget.CardView>